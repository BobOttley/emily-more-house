# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# SMTP Email Configuration (REQUIRED for email sending)
# Use Gmail App Password: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-school-email@gmail.com
SMTP_PASSWORD=your-16-character-app-password
SMTP_FROM_NAME=Emily - More House School
ADMISSIONS_EMAIL=office@morehousemail.org.uk

# Flask Configuration
SECRET_KEY=your-secret-key-for-session-management

# Optional: Gmail API (OAuth - Legacy, not required for email sending)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback
